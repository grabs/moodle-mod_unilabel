{{!
    @template unilabeltype_carousel/carousel_control
    Template to show a bootstrap carousel control.

    Example context (json):
    {
        "plugin": "unilabeltype_carousel",
        "cmid": 1
    }
}}

<a class="carousel-control-{{$direction}}{{/direction}}" href="#{{plugin}}-{{uniqid}}-{{cmid}}" data-slide="{{$direction}}{{/direction}}">
    <span class="carousel-control-{{$direction}}{{/direction}}-icon"><i class="{{$icon}}{{/icon}}"></i></span>
</a>
