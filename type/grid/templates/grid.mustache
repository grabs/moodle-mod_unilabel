{{!
    @template unilabeltype_grid/grid
    Template to show a bootstrap modal dialog.

    Example context (json):
    {
        "showintro": false,
        "intro": "",
        "columnssmall": 1,
        "height": "300",
        "autoheight": false,
        "tiles": [
            {
                "id": "1",
                "gridid": "1",
                "title": "Title 1",
                "url": "https://example.com",
                "urltitle": "Forum: someting",
                "newwindow": 1,
                "content": "<p>fdsafsdf<br><\/p>",
                "imageurl": "https://url-to-image",
                "imagemobileurl": "",
                "nr": 0,
                "visible": 1
            },
            {
                "id": "2",
                "gridid": "1",
                "title": "Title 2",
                "url": "",
                "urltitle": "",
                "newwindow": 1,
                "content": "<p>fdfdfdfdf<br><\/p>",
                "imageurl": "https://url-to-image",
                "imagemobileurl": "",
                "nr": 1,
                "visible": 1
            }
        ],
        "hastiles": true,
        "cmid": "55",
        "colclasses": "col-lg-3 col-md-6 col-sm-12"
    }
}}

{{#showintro}}
    {{{intro}}}
{{/showintro}}
{{#hastiles}}
    <div class="row mx-0">
        {{#tiles}}
            {{#visible}}
                <div class="text-center {{{colclasses}}} py-4">
                    <!-- The overlay is used as button to show the modal dialog -->
                    {{#url}}
                        <a tabindex="0" role="button" href="{{{url}}}"{{#newwindow}}{{!
                                }} target="_blank"{{/newwindow}}{{!
                                }} title="{{#urltitle}}{{#str}}link_to, mod_unilabel, {{.}}{{/str}}{{/urltitle}}{{^urltitle}}{{#str}}link_to, mod_unilabel, {{url}}{{/str}}{{/urltitle}}"{{!
                                }} aria-label="{{#urltitle}}{{#str}}link_to, mod_unilabel, {{.}}{{/str}}{{/urltitle}}{{^urltitle}}{{#str}}link_to, mod_unilabel, {{url}}{{/str}}{{/urltitle}}">
                            <div class="unilabel-overlay-effect bg-primary h-100 w-100"></div>
                        </a>
                    {{/url}}
                    {{^url}}
                        <a tabindex="0" role="button" href="#" data-toggle="modal"{{!
                                }} data-target="#grid-modal-{{cmid}}-{{nr}}"{{!
                                }} title="{{#str}}open_content, unilabeltype_grid, {{titleplain}}{{/str}}"{{!
                                }} aria-label="{{#str}}open_content, unilabeltype_grid, {{titleplain}}{{/str}}">
                            <div class="unilabel-overlay-effect bg-primary h-100 w-100"></div>
                        </a>
                    {{/url}}
                    {{^autoheight}}<div style="height:{{{height}}}px;width:100%;">{{/autoheight}}

                    {{#imagemobileurl}}
                        {{#imageurl}}
                            <img class="img-fluid d-none d-md-inline" alt="{{titleplain}}" src="{{{imageurl}}}"{{^autoheight}} style="height:100%;object-fit:contain;"{{/autoheight}}>
                        {{/imageurl}}
                        <img class="img-fluid d-inline d-md-none" alt="{{titleplain}}" src="{{{imagemobileurl}}}"{{^autoheight}} style="height:100%;object-fit:contain;"{{/autoheight}}>
                    {{/imagemobileurl}}
                    {{^imagemobileurl}}
                        {{#imageurl}}
                            <img class="img-fluid" alt="{{titleplain}}" src="{{{imageurl}}}"{{^autoheight}} style="height:100%;object-fit:contain;"{{/autoheight}}>
                        {{/imageurl}}
                    {{/imagemobileurl}}

                    {{^autoheight}}</div>{{/autoheight}}
                    <h5 class="unilabel-hyphens">{{{title}}}</h5>
                </div>
            {{/visible}}
        {{/tiles}}
    </div>

    {{#tiles}}
        {{#visible}}
            {{^url}}
                {{> unilabeltype_grid/dialog }}
            {{/url}}
        {{/visible}}
    {{/tiles}}
{{/hastiles}}
{{^hastiles}}
<span>{{#str}} nocontent , unilabeltype_grid {{/str}}</span>
{{/hastiles}}
